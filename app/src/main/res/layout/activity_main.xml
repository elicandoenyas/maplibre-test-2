<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Show Map"
        android:includeFontPadding="false"
        android:id="@+id/showMapButton"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/filtersContainer"
        app:layout_constraintTop_toBottomOf="@+id/showMapButton"
        android:weightSum="3"
        android:layout_marginTop="8dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/filterPika"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Pika"
            android:backgroundTint="@color/black"
            android:includeFontPadding="false"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:id="@+id/filterBehlul"
            android:layout_weight="1"
            android:text="Behlul"
            android:backgroundTint="@android:color/holo_red_dark"
            android:includeFontPadding="false"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:id="@+id/removeFilters"
            android:layout_weight="1"
            android:text="Remove Filters"
            android:backgroundTint="@android:color/holo_green_dark"
            android:includeFontPadding="false"/>

    </LinearLayout>
    <org.maplibre.android.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filtersContainer"
        android:id="@+id/mapView"/>

</androidx.constraintlayout.widget.ConstraintLayout>